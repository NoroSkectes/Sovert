{
  "manifest_version": 3,
  "name": "Sovert ~ v1.1",
  "version": "1.1",
  "description": "Utilize works, make them much easier and instant.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "commands"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
   "action": {
      "default_popup": "popup.html",
      "default_title": "Configurations"
  },
  "commands": {
    "capture-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture screenshot and send to Gemini"
    }
  }
}